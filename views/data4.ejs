<!DOCTYPE html>
 <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Providers by Specialty</title>
    </head>
    <body>
        <h1>Providers with Specialty: <%= providers.length > 0 ? providers[0].provider_specialty :'No Specialty Found' %></h1>
        <%if (providers.length > 0) { %>
        <table border="1">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Specialty</th>
            </tr>
        <%providers.forEach(provider => { %>
            <tr>
                <td><%= provider.first_name %></td>
                <td><%= provider.last_name %></td>
                <td><%= provider.provider_specialty %></td>
            </tr>
        <%}) %>
        </table>
        <%} else { %>
    <p>No providers found with this specialty.</p>
        <%} %>
    </body>
 </html>